// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(SUBMISSIVE)
  
  // User preferences from Discord bot learnings  
  subjectName   String?
  dominantName  String?
  dominantTitle String?  // Master/Mistress
  
  // Gender and POV preferences from old system
  subjectGender   Gender?  @default(NONE)
  dominantGender  Gender?  @default(NONE)
  subjectPOV      POV?     @default(FIRST_PERSON)
  dominantPOV     POV?     @default(SECOND_PERSON)
  
  // Session scoring from old system
  totalScore    Float?   @default(0.0)
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  userSessions  UserSession[]
  telemetry     Telemetry[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Theme {
  id          String   @id @default(cuid())
  name        String   @unique
  description String
  tags        String[] // Experience, Personality, Hypnosis, etc.
  keywords    String[]
  cnc         Boolean  @default(false)
  
  // Content
  mantras     Mantra[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Mantra {
  id         String     @id @default(cuid())
  themeId    String
  theme      Theme      @relation(fields: [themeId], references: [id], onDelete: Cascade)
  
  text       String
  difficulty Difficulty
  points     Int
  
  // Line categorization from old system
  lineType   LineType?  
  
  // Audio properties from old system
  audioPath  String?
  audioLength Float?    // in seconds
  voice      String?    // TTS voice used
  
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  
  @@unique([themeId, text], name: "themeId_text")
}

model UserSession {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name        String
  duration    Int?        // seconds
  phases      Phase[]
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Phase {
  id          String      @id @default(cuid())
  sessionId   String
  session     UserSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  name        String
  order       Int
  duration    Int         // seconds
  player      PlayerType
  cycler      CyclerType
  
  items       PhaseItem[]
  effects     Effect[]
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model PhaseItem {
  id        String      @id @default(cuid())
  phaseId   String
  phase     Phase       @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  
  type      ItemType
  content   String      // Theme name, script path, or visual path
  order     Int
  
  // Audio/Visual specific properties
  channel   Channel?    // L, R, C for audio items
  voice     String?     // TTS voice (SALLI, etc.)
  flashRate Float?      // Hz for visual items
  
  // Filters for content selection
  difficultyMin Difficulty?
  difficultyMax Difficulty?
  dominantName  String?
  submissiveName String?
  themeFilter   String?
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum Channel {
  L  // Left
  R  // Right  
  C  // Center
}

model Effect {
  id        String      @id @default(cuid())
  phaseId   String
  phase     Phase       @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  
  type      EffectType
  value     Float
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Telemetry {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  sessionId String?
  arousal   Float?
  focus     Float?
  depth     Float?
  timestamp DateTime @default(now())
  
  createdAt DateTime @default(now())
}

enum Role {
  DOMINANT
  SUBMISSIVE
  SWITCH
}

enum Difficulty {
  BASIC
  LIGHT
  MODERATE
  DEEP
  EXTREME
}

enum PlayerType {
  DIRECT
  STEREO_SPLIT
  ROTATIONAL
  LAYERED
  TRI_CHAMBER
  COMPOSITE
}

enum CyclerType {
  CHAIN
  RANDOM
  WEAVE
  BRIDGE
  ADAPTIVE
  CLUSTER
}

enum ItemType {
  MANTRA
  SCRIPT
  VISUAL
}

enum EffectType {
  REVERB
  ECHO
  PITCH_SHIFT
  VOLUME
  SPEED
}

enum Gender {
  M
  F
  NONE
}

enum POV {
  FIRST_PERSON      // 1PS - "I am..."
  SECOND_PERSON     // 2PS - "You are..."  
  THIRD_PERSON      // 3PS - "She/He is..."
  FIRST_PERSON_PLURAL // 1PP - "We are..."
}

enum LineType {
  INDUCTION
  DEEPENER
  FOCUSING
  DISSOCIATION
  EMERGENCE
  SUGGESTION
}